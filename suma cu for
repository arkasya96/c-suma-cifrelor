
if(val_numar > 0)
{
  int suma = 0;
  for(int i=0; i<strlen(argv[1]);i++)
  {
    printf("%d %d %d \n",i, argv[1][i], argv[1][i]-'0');
    int val = argv[1][i]-'0';
    suma+=val;
  }
  printf("%d \n", suma);
}

if(val_numar < 0)
{
  int suma = 0;
  for(int i=1; i<strlen(argv[1]);i++)
  {
    printf("%d %d %d \n",i, argv[1][i], argv[1][i]-'0');
    int val = argv[1][i]-'0';
    suma+=val;
  }
  printf("%d \n", suma);
}
